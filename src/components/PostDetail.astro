---
import type { CollectionEntry } from "astro:content";
import DefaultLayout from "@layouts/default.astro";
import ArticleTags from "@components/ArticleTags/index.astro";
const { post } = Astro.props as {
  post: CollectionEntry<"blog">;
};

const {
  data: {
    title,
    author,
    description,
    ogImage,
    canonical,
    tags,
    pubDatetime,
    modDatetime,
  },
} = post;
const { Content } = await post.render();
---

<DefaultLayout transition:animate="slide">
  <!-- Title -->
  <h1 class="text-4xl py-8">{title}</h1>
  <!-- Tags -->
  <ArticleTags tags={tags}/>
  <article id="content">
    <Content />
  </article>
</DefaultLayout>

<style lang="scss">
  .content-title {
    margin: 48px 0;
    font-size: 24px;
    font-weight: 600;
  }
  #content {
  }
</style>
