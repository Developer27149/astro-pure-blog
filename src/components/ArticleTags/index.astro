---
import Tag from "./Tag.astro";
const { tags } = Astro.props;

interface Props {
  tags: string[];
}
---

<>
  {
    tags?.length && (
      <ul class="flex gap-4 mb-4 italic animate-flip-up py-12 justify-end">
        {tags.map((tag) => (
          <Tag tagName={tag} />
        ))}
      </ul>
    )
  }
</>
